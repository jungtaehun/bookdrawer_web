
<style>
  .demo-list-control {
    width: 100%;
  }

  .demo-list-radio {
    display: inline;
  }
</style>
<form name="select" id="select" action="/home/write" method="post" enctype="multipart/form-data">
  <ul class="demo-list-control mdl-list">

    <% @dtest.each_with_index do |x, i|%>
        <li class="mdl-list__item">
    <span class="mdl-list__item-primary-content">
      <img src=<%=x.xpath("//item //image")[i].inner_text %>  style="width:100px;height:162px;">
      제목 : <%=x.xpath("//item //title")[i].inner_text.delete('<b>').delete('</b>') %>
      </br><p>저자 : <%=x.xpath("//item //author")[i].inner_text %></p>
    </span>
          <span class="mdl-list__item-secondary-action">
        <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="list-option-<%= i %>">
          <input type="radio" name="chk_select" id="list-option-<%= i %>" class="mdl-radio__button" name="options" value=<%= i %>/>
        </label>
    </span>
        </li>
    <% end %>

  </ul>
  <button type="submit" class="mdl-button mdl-button--primary">등록</button>
</form>

